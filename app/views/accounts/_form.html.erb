<div class="container">
<%= form_with(model: account, local: true) do |form| %>
  <% if account.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(account.errors.count, "error") %> prohibited this account from being saved:</h2>

      <ul>
      <% account.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :name %>
    <%= form.text_field :name, class:"form-control", required: true %>
  </div>

  <div class="field">
    <%= form.label :phone %>
    <%= form.text_field :phone, class:"form-control", required: true %>
  </div>

  <div class="field">
    <%= form.select :user_type, options_for_select(Account.user_types.map {|k, v| [k.humanize.capitalize, k]}), class:"form-control", style:"margin-top: 18px;" %>
    <%= form.hidden_field :hotel_id, value: current_user.hotels.first.id %>
  </div>

  <div class="actions">
    <%= form.submit class: "btn btn-success", style:"margin-top: 20px;" %>
  </div>
<% end %>
</div>