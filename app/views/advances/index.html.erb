<h1>Advances</h1>
<table class="table table-bordered">
  <thead>
    <tr>
      <th>Amount</th>
      <th>Account</th>
      <th>Date</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @advances&.order("created_at DESC")&.each do |advance| %>
      <tr>
        <td><%= advance.amount %></td>
        <td><%= advance.account.name %></td>
        <td><%= advance.created_at.in_time_zone("Islamabad").strftime("%I:%M%p %F") %>(<%= time_ago_in_words(advance.created_at) %> ago)</td>
        <%if current_user.admin?%>
        <td><%= link_to 'Destroy', advance, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <%end%>
      </tr>
    <% end %>
  </tbody>
</table>
<br>
<%= link_to 'New Advance', new_advance_path(id: @account_id), class:"btn btn-primary"%>
