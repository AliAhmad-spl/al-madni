<div class="container">
<h3>Add new sale man</h3>
<%= form_tag :create_sale_man_orders, method: :post do %>
  <p>Enter Name</p>
  <%= text_field_tag :name,"", class: "form-control", required: true%>
  <p>Enter Email</p>
  <%= text_field_tag :email,"", class: "form-control", required: true%>
  <p>Enter password</p>
  <%= text_field_tag :password,"", {class: "form-control", required: true}	%>
  <p>Select Type</p>
  <%= select_tag :type, options_for_select([["Admin", "admin"], ["Sale", "sale"], ["normal", "normal"]]) %>
  <br><p></p>
<%= submit_tag("Add Sale Man") %>
<%end%>
</div>