

<h1>Hotels</h1>
</div>
<table class="table table-bordered">
  <thead>
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @user_requests.each do |request| %>
      <tr>
        <td><%= User.find_by(id: request.user_id).name %></td>
        <td><%= User.find_by(id: request.user_id).email %></td>
        <td><%= link_to 'Accept', approve_orders_path(id: request.id) %></td>
        <td><%= link_to 'Reject', reject_orders_path(id: request.id) %></td> 
      </tr>
    <% end %>
  </tbody>
</table>
