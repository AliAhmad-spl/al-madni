<%= link_to "Home", root_path, :class => 'navbar-link btn btn-danger btn-sm pull-right', style:'color: white'  %>
<table class="table table-bordered">
  <thead>
    <tr>
      <th>Name</th>
      <th>current position</th>
      <th>select position</th>
      <th>Edit</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @menus.order(:position).each do |menu|%>
    <tr>
      <td><%= menu.name%></td>
      <td><%= menu.position%></td>
      <%= form_tag update_menu_orders_path do %>
      <td><%= select_tag "position", options_from_collection_for_select(current_user.hotels.first.one_menus, "position", "position")%></td>
      <td><%= hidden_field_tag :id, menu.id %></td>
      <td><%= submit_tag('update') %></td>
      <td><%= link_to 'Edit', edit_one_menu_path(menu) %></td>
    <%end%>
    </tr>
    <%end%>
  </tbody>
</table>